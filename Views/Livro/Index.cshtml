@model IEnumerable<livro>

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Livros</h1>
		<a class="btn btn-success mx-2" asp-controller="Livro" asp-action="Cadastrar">Cadastrar livro</a>
	</div>
</div>

<table class="table table-striped table-dark">
	<thead>
		<tr>
			<th scope="col">Nome</th>
			<th scope="col">Autor</th>
			<th scope="col">Descricao</th>
			<th scope="col">Genero</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			@foreach (var livro in Model)
			{
				<tr>
					<th scope="row">@livro.Nome</th>
					<td>@livro.Autor</td>
					<td>@livro.Descricao</td>
					<td>@livro.Genero</td>
					<td>
						<a asp-controller="Livro" asp-action="Editar" asp-route-id="@livro.Id" class="btn btn-warning mx-2">Editar</a>
						<a asp-controller="Livro" asp-action="Excluir" asp-route-id="@livro.Id" class="btn btn-warning mx-2">Excluir</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
