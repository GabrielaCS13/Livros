@model Livro
@{
    ViewData["title"] = "Cadastrar livro";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de livro</h1>
    </div>
    <form method="post" asp-controller="Livro" asp-action="Cadastrar">
        <div class="form-group">
            <label for="Nome" class="text-light">Endereço de email</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" aria-describedby="emailHelp" placeholder="Qual o nome do livro" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="Autor" class="text-light">Autor</label>
            <input type="text" class="form-control" asp-for="Autor" id="Autor" aria-describedby="emailHelp" placeholder="Qual o nome do autor?" />
            <span class="text-danger" asp-validation-for="Autor"></span>
        </div>
        <div class="form-group">
            <label for="Descricao" class="text-light">Descricao</label>
            <input type="text" class="form-control" asp-for="Descricao" id="Livro" aria-describedby="emailHelp" placeholder="Que descricao?" />
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group">
            <label for="Genero" class="text-light">Genero</label>
            <input type="text" class="form-control" asp-for="Genero" id="Livro" aria-describedby="emailHelp" placeholder="Qual é o genero?" />
            <span class="text-danger" asp-validation-for="Genero"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Enviar</button>
            <a class="btn btn-primary w-50" asp-controller="Livro" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
